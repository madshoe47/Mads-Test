<div class="container mx-auto">
    {% paginate search.results by 10 %}
    <h1 class="text-xl my-4 text-center">Search results</h1>
    <div class="flex justify-center items-center">
        <form action="{{ routes.search_url }}" method="get">
            <input type="search" name="q" placeholder="Søg" value="{{ search.terms | escape }}"
                class="border rounded-full p-1 px-4 w-80">
            <button type="submit"
                class="bg-gray-800 hover:bg-gray-500 text-white border px-4 py-1 rounded-full">Søg</button>
        </form>
    </div>

    {% if search.performed %}
    {% if search.results.size > 0 %}

    <div class="max-w-6xl mx-auto">
        <p class="text-gray-500 text-center my-10">
            {{ search.results.size }} resultater fundet for: <b>{{ search.terms | escape }}</b>
        </p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for item in search.results %}
            {% case item.object_type %}

            {% when 'product' %}
            {% render 'product-card', product: item %}

            {% endcase %}

            {% endfor %}
        </div>
    </div>

    {% else %}

    <div class="text-center my-4">
        <p>No results found for the search term {{ search.terms | escape }}. Try to use a different keyword</p>
    </div>

    {% endif %}
    {% endif %}


    {% render 'pagination', pagination: 'paginate' %}
    {% endpaginate %}



</div>